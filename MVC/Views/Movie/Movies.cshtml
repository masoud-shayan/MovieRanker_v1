@model IList<GetMoviesViewModel> 


<div class="container">
    <div class="row d-flex flex-column align-items-center justify-content-center">
        <div class="col-md-8">
            <h4 class="text-center" style="margin-bottom: 50px;font-size: 30px;font-weight:300;line-height:1.2">List of all recent movie</h4>
            
            
                            @foreach (GetMoviesViewModel movie in @Model)
                            {
                                <a class=" movies-container-link" href="/Movie/@movie.Name">
                                    <div class="row movies-container">
                                        <div class="col-md-4" style="padding: 0">
                                            <img src="@movie.ImagePath" alt="Movie Photo" style="width: 200px;height: 152px;">
                                        </div>
                                        <div class="col-md-8">
                                            <p style="font-weight: 700">@movie.Name</p>
                                            <span class="fa fa-star checked" style="color: orange"></span>
                                            <span style="font-weight: 700;font-size: 14px;">@movie.OverallRank</span>
                                            <span style="font-weight: 400;font-size: 12px;">/ @movie.RankCount</span>
                                            <p style="line-height: 16px; height: 103px;overflow: hidden;font-size: 14px;">@movie.Description</p>
                                        </div>
                                    </div>
                            
                                </a>
                            }
  

        </div>
    </div>
</div>
    

