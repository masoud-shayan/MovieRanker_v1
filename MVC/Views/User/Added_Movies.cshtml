@using System.Data
@model IList<GetMoviesViewModel>
<div class="container">
    <div class="row">
        <div class="col-md-2 d-flex flex-column">
            @* <div class="row d-flex flex-column justify-content-between align-items-center" style="height:135px"> *@
            @*     <img src="~/image/download.jpg" alt="User Photo" class="img-thumbnail" style="height: 100px"> *@
            @*     <p style="padding: 5px; background-color: #fafafa; font-size: 12px">UserName</p> *@
            @* </div> *@

        </div>
        <div class="col-md-2">

        </div>
        <div class="col-md-7 d-flex flex-column">
            <h5 style="margin-bottom: 75px;font-size: 20px;font-weight:400;line-height:1.2">The Movies Added by You :</h5>

            @foreach (var movie in @Model) 
            {
                <a class="movies-container-link"  href="/Movie/@movie.Name">
                    <div class="row movies-container">
                        <div class="col-md-4" style="padding: 0">
                            <img src="@movie.ImagePath" alt="Movie Photo" style="width: 200px;height: 152px;">
                        </div>
                        <div class="col-md-8">
                            <p style="font-weight: 700">@movie.Name</p>
                            <span class="fa fa-star checked" style="color: orange"></span>
                            <span style="font-weight: 700;font-size: 14px;">@movie.OverallRank</span>
                            <span style="font-weight: 400;font-size: 12px;">/ @movie.RankCount</span>
                            <p style="line-height: 16px; height: 103px;overflow: hidden;font-size: 14px;">@movie.Description</p>
                        </div>
                    </div>

                </a>
            }

        </div>
    </div>
</div>