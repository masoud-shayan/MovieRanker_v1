@model UserPhotoViewModel


<h3>Add image profile</h3>


<div class="row">
    <div class="col-md-4">

        @{
            if (!string.IsNullOrEmpty(ViewBag.UserImagePath))
            {
                <img src="@ViewBag.UserImagePath" style="height: 150px"/>
                <form asp-controller=Auth asp-action=UserPhoto enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserImageFile" class="control-label"></label>
                        <input asp-for="UserImageFile" accept="image/*"><br/>
                        <span asp-validation-for="UserImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Change"  class="btn btn-primary">
                    </div>
                </form>
                <form asp-controller=Auth asp-action=DeleteUserPhoto >
                    <div class="form-group">
                        <input type="submit" value="Delete"  class="btn btn-danger">
                    </div>
                </form>

            }
            else
            {
                <form asp-controller=Auth asp-action=UserPhoto enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserImageFile" class="control-label"></label>
                        <input asp-for="UserImageFile" accept="image/*"><br/>
                        <span asp-validation-for="UserImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary">
                    </div>
                </form>
            }
        }

    </div>
</div>